---
title: TunePad Interactives
splash: /images/splash/curriculum-splash2.png
---
{% extends "layouts/base.njk" %}
{% block header %}
    {{ super() }}
<style>
    main {
        margin: 4rem auto 0 auto;
    }
    article .content-wrapper {
        padding: 1rem 2rem 3rem 2rem;
        background-color: #f3f3f3; 
        margin: 0;
    }
    header {
        max-width: 1500px;
        width: 100%;
        height: 360px;
        background-image: url('{{ splash }}');
        background-size: cover;
        background-repeat: no-repeat;
        margin: 0 auto;
        text-align: left;
        padding: 12rem 0 0 4rem;
        color: #fffd;
        font-family: var(--body-font);
    }
    header h1, header h2 {
        font-weight: 500;
        margin: 0.25rem;
        line-height: 110%;
    }
    header h1 { font-size: 25px; }
    header h2 { font-size: 42px; }
</style>
{% endblock %}
{% block banner %}
<div style="background-color: #0008; width: max-content;">
    <h1>{{ title }}</h1>
    <h2>{{ subtitle }}</h2>
</div>
{% endblock %}

{% block resources %}
{% endblock %}