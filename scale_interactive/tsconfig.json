{
    "compilerOptions": {
        "target": "es2021",
        "lib": [ "es2021", "dom" ],
        "module": "esnext",
        "rootDir": "./",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./build/js/tso",
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitThis": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts*"
    ]
}