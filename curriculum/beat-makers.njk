<section class="highlights">
    <div class="units">
    {%- for unit in collections.beatmakers -%}
        <div class="unit" data-url="{{ unit.url }}">
            <div class="unit-image" style="background-image: url('{{ unit.data.splash }}')">
                {%- if unit.data.audio -%}
                <button class="unit-audio-button">
                    <i class="fas fa-play"></i>
                    <audio src="{{ unit.data.audio }}" class="audio-preview"></audio>
                </button>
                {%- endif -%}
            </div>
            <div class="unit-info">
                <h3>DAY {{ loop.index }}</h3>
                <h1>{{ unit.data.title }}</h1>
                <div class="summary">{{ unit.data.description }}</div>
            </div>
            <div class="expand-link">
                <i class="fas fa-caret-right"></i>
            </div>
        </div>
    {%- endfor -%}
    </div>
</section>
